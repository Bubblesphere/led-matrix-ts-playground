{
    "compilerOptions": {
      /* Basic Options */
      "baseUrl": ".",
      "target": "ES2015",  /* Build to ES2015 */
      "module": "ES2015",  /* using ES2015 modules */
      "lib": ["es2015", "dom"], /* Using ES2015 features and DOM APIs  */
      "outDir": "./dist/", /* build to ./dist/ */
      "sourceMap": true,
      "removeComments": true,
      "jsx": "react",
      "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "dist",
    ]
  }